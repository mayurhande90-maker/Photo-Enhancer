rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete their own files in a 'user_creations' folder.
    // The {userId} wildcard ensures that a user can only access their own directory.
    match /user_creations/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
